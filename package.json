{
  "name": "hydralance",
  "displayName": "HydraLance",
  "description": "Adds Hydra support to VS Code",
  "version": "0.0.2",
  "engines": {
    "vscode": "^1.104.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onLanguage:yaml"
  ],
  "extensionDependencies": [
    "ms-python.vscode-pylance"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "hydralance.diagnostics",
        "title": "HydraLance: Generate Diagnostic Info"
      },
      {
        "command": "hydralance.showLogs",
        "title": "HydraLance: Show Logs"
      }
    ],
    "configuration": {
      "title": "HydraLance",
      "properties": {
        "hydralance.hideHelperFolder": {
          "type": "boolean",
          "default": true,
          "description": "Hide the hydralance folder from the VS Code explorer"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "@types/vscode": "^1.104.0",
    "@typescript-eslint/eslint-plugin": "^8.45.0",
    "@typescript-eslint/parser": "^8.45.0",
    "@vscode/test-cli": "^0.0.11",
    "@vscode/test-electron": "^2.5.2",
    "@vscode/vsce": "^3.6.2",
    "eslint": "^9.36.0",
    "glob": "^8.1.0",
    "typescript": "^5.9.3"
  }
}
