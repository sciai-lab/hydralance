{
  "name": "hydralance",
  "displayName": "HydraLance", 
  "description": "Intelligent language support for Hydra configuration files with go-to-definition for _target_ values, parameter auto-completion, cross-file interpolation resolution and defaults list navigation.",
  "version": "0.0.4",
  "engines": {
    "vscode": "^1.104.0"
  },
  "categories": [
    "Machine Learning",
    "Linters"
  ],
  "keywords": [
    "hydra",
    "yaml",
    "configuration",
    "completion",
    "navigation",
    "go to definition"
  ],
  "repository": {
    "url": "https://github.com/sciai-lab/hydralance"
  },
  "license": "MIT",
  "publisher": "imagirom",
  "icon": "icon.png",
  "galleryBanner": {
    "color": "#1F2436",
    "theme": "dark"
  },
  "activationEvents": [
    "onLanguage:yaml"
  ],
  "extensionDependencies": [
    "ms-python.vscode-pylance"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "hydralance.diagnostics",
        "title": "HydraLance: Generate Diagnostic Info"
      },
      {
        "command": "hydralance.showLogs",
        "title": "HydraLance: Show Logs"
      },
      {
        "command": "hydralance.debugIndex",
        "title": "HydraLance: Debug Interpolation Index"
      },
      {
        "command": "hydralance.refreshIndex",
        "title": "HydraLance: Refresh YAML Index"
      }
    ],
    "configuration": {
      "title": "HydraLance",
      "properties": {
        "hydralance.hideHelperFolder": {
          "type": "boolean",
          "default": true,
          "description": "Hide the hydralance folder from the VS Code explorer"
        },
        "hydralance.excludePatterns": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "default": [".venv/**"],
          "description": "Glob patterns to exclude from YAML file indexing for interpolation resolution"
        },
        "hydralance.matchFilter": {
          "type": "string",
          "enum": ["all", "top matches only", "perfect matches only"],
          "default": "top matches only",
          "description": "Controls which interpolation matches are shown: 'all' shows everything, 'top matches only' shows only the highest level matches found, 'perfect matches only' shows only matches that exactly match the interpolation depth"
        },
        "hydralance.isolateWorkspaceFolders": {
          "type": "boolean",
          "default": true,
          "description": "When enabled, interpolation resolution only considers files within the same workspace folder, preventing cross-workspace matches"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "@types/vscode": "^1.104.0",
    "@typescript-eslint/eslint-plugin": "^8.45.0",
    "@typescript-eslint/parser": "^8.45.0",
    "@vscode/test-cli": "^0.0.11",
    "@vscode/test-electron": "^2.5.2",
    "@vscode/vsce": "^3.6.2",
    "eslint": "^9.36.0",
    "glob": "^8.1.0",
    "typescript": "^5.9.3"
  }
}
